                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.300"
                              Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                              To="#00000000" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

