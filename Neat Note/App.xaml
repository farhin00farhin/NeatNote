                                <Ellipse.Effect>
                                    <DropShadowEffect Opacity="0.43" ShadowDepth="6" BlurRadius="7" Direction="310"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse Fill="#FF004E6B" HorizontalAlignment="Left" Height="9" Margin="12,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="9" StrokeThickness="80" StrokeDashOffset="16">
